<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQR">

    <TextView
        android:id="@+id/courseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="40px"
        android:textSize="100px"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/wifImg"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/present_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textAlignment="center"
        android:text="No Of Present Students"
        android:layout_below="@+id/wifImg"/>

    <TextView
        android:id="@+id/text_danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_above="@+id/text"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/manual_attend_btn"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="50px" />

    <Button
        android:id="@+id/manual_attend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_attend_btn"
        android:background="@color/colorAccent"
        android:layout_margin="5px"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Add Manual Attendance"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete_attend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Attendance"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:shadowDy="0"
        android:shadowDx="0"
        android:textColor="@color/white"
        android:layout_margin="5px"
        />

</RelativeLayout>