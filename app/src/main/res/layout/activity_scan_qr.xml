<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/courseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="50px"
            android:textSize="100px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500px"
            android:layout_gravity="center_horizontal"
            android:text="Scan" />

    </LinearLayout>

    <TextView
        android:id="@+id/present_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="600px"
        android:textSize="50px"
        android:textAlignment="center"
        android:text="No Of Present Students"/>

    <TextView
        android:id="@+id/text_danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="400px"
        android:textColor="@color/red"
        android:textSize="50px"
        android:textAlignment="center"
        android:text=""/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350px"
        android:textSize="45px"
        android:textAlignment="center"
        android:text=""/>

    <Button
        android:id="@+id/manual_attend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delete_attend_btn"

        android:layout_marginTop="-54dp"
        android:background="@color/colorAccent"
        android:padding="2px"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="Add Manual Attendance"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete_attend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Attendance"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:shadowDy="0"
        android:shadowDx="0"
        android:textColor="@color/white"
        android:padding="2px"
        />

</RelativeLayout>